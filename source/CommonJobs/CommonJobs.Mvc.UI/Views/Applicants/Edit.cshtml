@using CommonJobs.Infrastructure.Mvc.SecurityTrimming;
@{
    ViewBag.Title = "Edit";
    ScriptManager.RegisterCss(Url.Content("~/Scripts/mdd_styles.css"));
    ScriptManager.RegisterCss(Url.Content("~/Content/EditApplicant/EditApplicant.less"));
    ScriptManager.RegisterCss(Url.Content("~/Content/jquery.Jcrop.min.css"));
    
    ScriptManager.RegisterJs(Url.Content("~/Scripts/jquery.jcrop.min.js"));
    ScriptManager.RegisterJs(Url.Content("~/Scripts/MarkdownDeepLib.min.js"));
    ScriptManager.RegisterJs(Url.Content("~/Scripts/nervoustissue.js"));
    ScriptManager.RegisterJs(Url.Content("~/Scripts/nervoustissue-uploader.js"));
    ScriptManager.RegisterJs(Url.Content("~/Content/EditApplicant/EditApplicant.js"));
    ScriptManager.RegisterJs(Url.Content("~/Scripts/jquery.collapsable-sections.js"));
}
@if (false)
{
    <link href="../../Content/EditApplicant/EditApplicant.less" rel="stylesheet" type="text/css" />
    <script src="../../Content/EditApplicant/EditApplicant.js" type="text/javascript"></script>
}
<div id="EditApp" class="edition-normal file-dropzone bootstrap-scope">
    
    <input type="file" class="dropzoneinput" multiple />

    <div class="editing-bar form-actions">
        <div class="change-management-options">
            <p>
                <button class="saveApplicant btn btn-primary disabled" disabled="disabled"><i class="icon-ok icon-white"></i> Guardar cambios</button>
                <button class="reloadApplicant btn disabled" disabled="disabled">Descartar cambios</button>
                <button class="deleteApplicant btn btn-danger pull-right"><i class="icon-remove icon-white"></i> Eliminar postulante</button>
                @Html.RenderIfHasPermission("HireApplicant", "Employees",
                    @:<button class="hireApplicant btn btn-success pull-right">Contratar postulante</button>
                )
            </p>
        </div>
    </div>
    
    <div class="row-fluid">
        <div class="span8">
            <div class="info-section firstInfo">
                <span class="last-modified"><strong>Última actualización:</strong> <span data-bind="Last-Modified"></span></span>
                <h1 class="fullName"><span class="editable-field" data-bind="fullName"></span><span class="related-employee" data-bind="EmployeeId"></span></h1>
                <div class="editable-field photo" data-bind="Photo"></div>
            </div>
        </div>
        <div class="span4">
            <div class="additional-info-section shared-profile admin-section">
                <div class="isHighligted editable-field" data-bind="IsHighlighted"></div>
                <div>
                    <h3>Links de acceso</h3>
                    <div class="editable-field" data-bind="SharedLinks"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="info-section row-fluid">
        <div class="span12">
            <h2>Datos Personales <span class="collapsable-section-title">Ocultar</span></h2>
        </div>
    </div>
    <div class="row-fluid collapsable-section-data">
        <div class="personal-data span6">
            <h3>Información personal</h3>
            <ul>
                <li><span class="field-name">Fecha de nacimiento:</span><span class="editable-field" data-bind="BirthDate"><span class="view-editable view-editable-prototype">5 de Octubre de 1984 (28 años)</span></span></li>
                <li><span class="field-name">Estado Civil:</span><span class="editable-field" data-bind="MaritalStatus"><span class="view-editable view-editable-prototype">Soltero</span></span></li>
                <li><span class="field-name">Dirección:</span><span class="editable-field" data-bind="Address"></span></li>
                <li><span class="field-name">Teléfonos:</span><span class="editable-field" data-bind="Telephones"></span></li>
                <li><span class="field-name">Email:</span><span class="editable-field" data-bind="Email" data-cj-suggest-emaildomain="EmailDomain"></span></li>
                <li><img class="linkedIn icon" src="/Content/Images/linkedin_16.png" width="16" height="16" alt="Ver el perfil en LinkedIn" /><span class="field-name">LinkedIn:</span><span class="editable-field" data-bind="LinkedInLink"></span></li>
            </ul>
        </div>
        <div class="aptitude-data additional-info-section span6">
            <h3>Aptitudes</h3>
            <ul>
                <li><span class="field-name">Nivel de Inglés:</span><span class="editable-field" data-bind="EnglishLevel" data-cj-suggest="EnglishLevel"></span></li>
                <li><span class="field-name">Título:</span><span class="editable-field" data-bind="Degree" data-cj-suggest="Degree"></span> (<span class="editable-field" data-bind="IsGraduated"><span class="view-editable view-editable-prototype">No graduado</span></span>)</li>
                <li><span class="field-name">Universidad:</span><span class="editable-field" data-bind="College" data-cj-suggest="College"></span></li>
                <li><span class="field-name">Skills:</span><span class="editable-field" data-bind="Skills" data-cj-suggest-multiple="Skill"></span></li>
                <li>
                    <span class="field-name">Skills técnicos</span>
                    <div class="editable-field" data-bind="TechnicalSkills"></div>
                </li>
            </ul>
        </div>
    </div>

    <div class="info-section row-fluid">
        <div class="span12">
            <h2>Datos Laborales <span class="collapsable-section-title">Ocultar</span></h2>
            <div class="Employment-data collapsable-section-data">
                <h3>Experiencia previas en empresas</h3>
                <ul>
                    <div class="editable-field" data-bind="CompanyHistory"></div>
                </ul>
            </div>
        </div>
    </div>    
    <div class="info-section row-fluid">
        <div class="span12">
            <h2>Notas <span class="collapsable-section-title">Ocultar</span></h2>
            <div class="editable-field collapsable-section-data" data-bind="Notes"></div> 
        </div>
    </div>
</div>
<div class="bootstrap-scope">
    <div class="modal fade" id="generic-modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3 class="title"></h3>
            <h6 class="subtitle"></h6>
        </div>
        <div class="modal-body">
            <ul class="file-list">
            </ul>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cerrar</a>
        </div>
    </div>
</div>